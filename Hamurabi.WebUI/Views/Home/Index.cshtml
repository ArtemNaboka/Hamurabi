@{
    ViewBag.Title = "Home Page";
}

<div id="info">
    <p id="year-info"></p>
</div>

<div class="game-form">
    <form class="form-horizontal">
        <fieldset>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="acrChange">
                    How many acres do you wish to buy or sell?
                </label>
                <div class="col-md-4">
                    <input id="acrChange" name="name" type="text" placeholder="enter a negative amount to sell acrs" class="form-control input-md" required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="bushelsToFeed">
                    How many bushels do you wish to feed your people?
                </label>
                <div class="col-md-4">
                    <input id="bushelsToFeed" name="vorname" type="text" placeholder="each citizen needs 20 bushels a year" class="form-control input-md" required="">

                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="acrsToSeed">
                    How many acres do you wish to plant with seed?
                </label>
                <div class="col-md-4">
                    <input id="acrsToSeed" name="gebdatum" type="text" placeholder="each acre takes one bushel" class="form-control input-md" required="">
                </div>
            </div>
            <!-- Button (Double) -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="makeTurn"></label>
                <div class="col-md-8">
                    <button id="makeTurn" name="anmelden" class="btn btn-success">Make it so!</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>


<link href="~/Content/style.css" rel="stylesheet" />